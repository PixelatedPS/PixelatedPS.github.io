<!DOCTYPE html>
<html lang="en">
<head>
  </head>
<body>
  <h1 class="arc-text">Arc</h1>
  <div class="search-container">
    <button class="search-button">Search...</button>
  </div>
  <script>
    const searchButton = document.querySelector('.search-button');
    const searchInput = document.createElement('input');  // Create an input field
    searchInput.type = 'text';
    searchInput.placeholder = 'Search...';
    searchInput.classList.add('search-input');  // Add styling class
    document.querySelector('.search-container').appendChild(searchInput);  // Add input to container

    searchButton.addEventListener('click', () => {
      const searchTerm = searchInput.value;  // Get user input
      window.location.href = `https://www.google.com/search?q=${searchTerm}`;
    });
  </script>
</body>
</html>
